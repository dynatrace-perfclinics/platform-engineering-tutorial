apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  annotations:
    argocd.argoproj.io/sync-wave: "4"
  labels:
    dt.owner: "platform_team"
  name: gitea
  namespace: argocd
spec:
  sources:
    - repoURL: 'GITHUB_REPO_PLACEHOLDER'
      targetRevision: main
      path: "gitops/manifests/platform/giteaingresses"
    - repoURL: 'https://dl.gitea.com/charts'
      targetRevision: 9.5.1
      chart: gitea
      helm:
        values: |
          gitea:
            config:
              APP_NAME: "DT Platform HOT Day"
            admin:
              username: hotday
              password: training
              email: dthotday@example.com
  destination:
    namespace: gitea
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 5
      backoff:
        duration: 5s
        maxDuration: 3m0s
        factor: 2
