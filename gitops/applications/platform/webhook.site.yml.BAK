apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  annotations:
    argocd.argoproj.io/sync-wave: "2"
  labels:
    dt.owner: "platform_team"
  name: webhook.site
  namespace: argocd
spec:
  sources:
    - repoURL: 'GITHUB_REPO_PLACEHOLDER'
      targetRevision: main
      path: "gitops/manifests/platform/webhook.site"
  destination:
    namespace: webhook
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 5
      backoff:
        duration: 5s
        maxDuration: 3m0s
        factor: 2
