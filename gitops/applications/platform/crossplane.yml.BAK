apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  annotations:
    argocd.argoproj.io/sync-wave: "5"
  labels:
    dt.owner: "platform_team"
  name: crossplane
  namespace: argocd
spec:
  sources:
    - repoURL: 'https://charts.crossplane.io/stable'
      targetRevision: 1.14.1
      chart: crossplane
      # helm:
      #   values: |
      #     server:
      #       authMode: "server"
    - repoURL: 'GITHUB_REPO_PLACEHOLDER'
      targetRevision: main
      path: "gitops/manifests/platform/crossplane"
  destination:
    namespace: crossplane
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 5
      backoff:
        duration: 5s
        maxDuration: 3m0s
        factor: 2